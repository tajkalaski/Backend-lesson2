@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@{
    ViewData["Title"] = "Movies";
}

<h2>Index</h2>

<a asp-controller="Home" asp-action="Index">Home</a>

<div>
    <h2>@ViewBag.JungleBook.Title</h2>
    <p>Price: @String.Format("{0:0.00}", ViewBag.JungleBook.Price)</p>
    <p><img src="/Images/@ViewBag.JungleBook.ImageUrl" alt="@ViewBag.JungleBook.Title" /></p>
    <p>Director: @ViewBag.JungleBook.Director</p>
</div>

